<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- コンソール出力設定 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- テスト詳細ログ出力設定 -->
    <appender name="TEST_DETAIL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- エンティティテストのログレベルを設定 -->
    <logger name="com.example.javase17learningproject.entity" level="DEBUG">
        <appender-ref ref="TEST_DETAIL"/>
    </logger>
    <logger name="com.example.javase17learningproject.e2e" level="DEBUG">
        <appender-ref ref="TEST_DETAIL"/>
    </logger>

    <!-- Seleniumのログ設定 -->
    <logger name="org.openqa.selenium" level="INFO">
        <appender-ref ref="TEST_DETAIL"/>
    </logger>

    <!-- Spring Securityのログ設定 -->
    <logger name="org.springframework.security" level="DEBUG">
        <appender-ref ref="TEST_DETAIL"/>
    </logger>

    <!-- Spring MVCのログ設定 -->
    <logger name="org.springframework.web" level="INFO">
        <appender-ref ref="TEST_DETAIL"/>
    </logger>

    <!-- Hibernateのログ設定 -->
    <logger name="org.hibernate.SQL" level="DEBUG">
        <appender-ref ref="TEST_DETAIL"/>
    </logger>

    <!-- ルートロガーの設定 (重複を削除) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="TEST_DETAIL"/>
    </root>
</configuration>